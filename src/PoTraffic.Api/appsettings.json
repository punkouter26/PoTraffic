{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/potraffic-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ConnectionStrings": {
    "Default": "Server=localhost,1433;Database=PoTraffic;User=sa;Password=Dev!P@ssw0rd;TrustServerCertificate=true"
  },
  "Jwt": {
    "Key": "REPLACE_WITH_SECRET_FROM_KEYVAULT_AT_LEAST_32_CHARS_LONG",
    "Issuer": "PoTraffic",
    "Audience": "PoTraffic",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 30
  },
  "AzureKeyVault": {
    "VaultUri": ""
  },
  "Hangfire": {
    "DashboardPath": "/hangfire"
  },
  "Features": {
    "TripleTestEnabled": true
  },
  "AllowedHosts": "*"
}

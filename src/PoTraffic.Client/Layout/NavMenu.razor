@using Microsoft.AspNetCore.Components.Authorization
@using PoTraffic.Client.Infrastructure.Auth
@inject HttpClient Http
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="dashboard">PoTraffic</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <AuthorizeView>
            <Authorized>
                <div class="nav-section-title">Personal</div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="dashboard" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="routes">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> My Routes
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="account/settings">
                        <span class="bi bi-gear-fill-nav-menu" aria-hidden="true"></span> Settings
                    </NavLink>
                </div>

                <AuthorizeView Roles="Administrator">
                    <Authorized Context="adminContext">
                        <div class="nav-separator"></div>
                        <div class="nav-section-title">Administration</div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="admin">
                                <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Usage Insights
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="admin/volatility">
                                <span class="bi bi-graph-up-nav-menu" aria-hidden="true"></span> Global Volatility
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="diag">
                                <span class="bi bi-wrench-adjustable-nav-menu" aria-hidden="true"></span> Diagnostics
                            </NavLink>
                        </div>
                        @if (_tripleTestEnabled)
                        {
                            <div class="nav-item px-3">
                                <NavLink class="nav-link" href="admin/triple-test">
                                    <span class="bi bi-lightning-charge-fill-nav-menu" aria-hidden="true"></span> Triple Test Hub
                                </NavLink>
                            </div>
                        }
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="admin/seed">
                                <span class="bi bi-database-fill-add-nav-menu" aria-hidden="true"></span> System Seed
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <div class="nav-separator"></div>
                <div class="nav-item px-3 rz-mt-4">
                    <RadzenButton class="rz-w-100" ButtonStyle="ButtonStyle.Light" Text="Sign Out" Icon="logout"
                                  Click="LogoutAsync" />
                </div>
            </Authorized>

            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login" Match="NavLinkMatch.All">
                        <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Sign In
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register">
                        <span class="bi bi-person-plus-nav-menu" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool _tripleTestEnabled = true; // default true until flags are fetched

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    // Fetch feature flags on first render; show Triple Test only when enabled
    protected override async Task OnInitializedAsync()
    {
        try
        {
            var flags = await Http.GetFromJsonAsync<FeaturesDto>("/api/system/features");
            if (flags is not null) _tripleTestEnabled = flags.TripleTestEnabled;
        }
        catch { /* Silently handled — nav remains unchanged on error */ }
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task LogoutAsync()
    {
        if (AuthStateProvider is JwtAuthenticationStateProvider jwtProvider)
        {
            await jwtProvider.LogoutAsync();
        }
        Nav.NavigateTo("/login", forceLoad: true);
    }

    private sealed record FeaturesDto(bool TripleTestEnabled);
}
